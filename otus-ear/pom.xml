<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>otus-ear</artifactId>
	<packaging>ear</packaging>

	<parent>
		<groupId>org.ccem.otus</groupId>
		<artifactId>otus-root</artifactId>
    		<version>1.19-SNAPSHOT</version>
		<relativePath>../otus-root/pom.xml</relativePath>
	</parent>

	<build>
		<finalName>otus-ear</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<version>${maven.ear.version}</version>
				<configuration>
					<modules>
						<webModule>
							<groupId>org.ccem.otus</groupId>
							<artifactId>otus-rest</artifactId>
							<contextRoot>otus-rest</contextRoot>
						</webModule>
						<ejbModule>
							<groupId>org.ccem.otus</groupId>
							<artifactId>otus-business</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>org.ccem.otus</groupId>
							<artifactId>otus-persistence</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>org.ccem.otus</groupId>
							<artifactId>otus-participant</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>org.ccem.otus</groupId>
							<artifactId>otus-center</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>org.ccem.otus</groupId>
							<artifactId>otus-user</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>org.ccem.otus</groupId>
							<artifactId>otus-activity</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>org.ccem.otus</groupId>
							<artifactId>otus-laboratory</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>org.ccem.otus</groupId>
							<artifactId>otus-datasource</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>org.ccem.otus</groupId>
							<artifactId>otus-file-uploader</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>org.ccem.otus</groupId>
							<artifactId>otus-extraction</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>org.ccem.otus</groupId>
							<artifactId>otus-file-uploader</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>org.ccem.otus</groupId>
							<artifactId>otus-report</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>org.ccem.otus</groupId>
							<artifactId>otus-configuration</artifactId>
						</ejbModule>
					</modules>
					<archive>
						<manifest>
							<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
						</manifest>
						<manifestEntries>
							<git-SHA-1>${buildNumber}</git-SHA-1>
						</manifestEntries>
					</archive>
					<version>6</version>
					<defaultLibBundleDir>lib</defaultLibBundleDir>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.wildfly.plugins</groupId>
				<artifactId>wildfly-maven-plugin</artifactId>
				<version>1.1.0.Alpha4</version>
				<configuration>
					<hostname>${wildfly-hostname}</hostname>
					<port>${wildfly-port}</port>
					<username>${wildfly-username}</username>
					<password>${wildfly-password}</password>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<!-- - - Dependency between modules - ! -->
		<dependency>
			<groupId>org.ccem.otus</groupId>
			<artifactId>otus-commons</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>org.ccem.otus</groupId>
			<artifactId>otus-business</artifactId>
			<version>${project.parent.version}</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>org.ccem.otus</groupId>
			<artifactId>otus-extraction</artifactId>
			<version>${project.parent.version}</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>org.ccem.otus</groupId>
			<artifactId>otus-participant</artifactId>
			<version>${project.parent.version}</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>org.ccem.otus</groupId>
			<artifactId>otus-center</artifactId>
			<version>${project.parent.version}</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>org.ccem.otus</groupId>
			<artifactId>otus-persistence</artifactId>
			<version>${project.parent.version}</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>org.ccem.otus</groupId>
			<artifactId>otus-rest</artifactId>
			<version>${project.parent.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>org.ccem.otus</groupId>
			<artifactId>survey-model</artifactId>
